<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<!-- 引入配置文件
	<properties resource="init.properties" />
 	-->
	<!-- 指定数据连接驱动jar地址 -->
	<!-- <classPathEntry location="C:\Users\Administrator\.m2\repository\mysql\mysql-connector-java\5.1.30\mysql-connector-java-5.1.30.jar" /> -->

	<classPathEntry location="\usr\local\apache-maven-3.5.3\maven\repository\mysql\mysql-connector-java\5.1.30\mysql-connector-java-5.1.30.jar" />
	<!-- 一个数据库一个context -->
	<context id="DB2Tables" targetRuntime="MyBatis3">

		<commentGenerator>
			<property name="suppressAllComments" value="true" /><!-- 是否取消注释 -->
			<property name="suppressDate" value="true" /><!-- 是否生成注释代时间戳 -->
		</commentGenerator>

		<!-- jdbc连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/maxcar-statistics?characterEncoding=utf-8" userId="root" password="123456" />

		<!-- 类型转换 -->
		<javaTypeResolver>
			<!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 生成实体类地址 -->
		<javaModelGenerator targetPackage="com.maxcar.statistics.pojo"
			targetProject="D:\temp">
			<!-- 是否在当前路径下新加一层schema,eg：false路径com.phhc.model， true:com.phhc.model.[schemaName] -->
			<property name="enableSubPackages" value="false" />
			<!-- 是否针对string类型的字段在set的时候进行trim调用 -->
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 生成mapxml文件 -->
		<sqlMapGenerator targetPackage="com.maxcar.statistics.mapping"
			targetProject="D:\temp">
			<!-- 是否在当前路径下新加一层schema,eg：false路径com.phhc.model， true:com.phhc.model.[schemaName] -->
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!-- 生成mapxml对应client，也就是接口dao -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.maxcar.statistics.dao" targetProject="D:\temp">
			<!-- 是否在当前路径下新加一层schema,eg：false路径com.phhc.model， true:com.phhc.model.[schemaName] -->
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>

		<!-- 配置表信息 -->

		<table schema="test" tableName="tbl_now_report" domainObjectName="NowReport"
			   enableCountByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"	selectByExampleQueryId="true"
			   enableUpdateByExample="true" />

		<!--<table schema="test" tableName="tbl_reward" domainObjectName="Reward"-->
			   <!--enableCountByExample="true" enableDeleteByExample="true"-->
			   <!--enableSelectByExample="true"	selectByExampleQueryId="true"-->
			   <!--enableUpdateByExample="true" />-->
			<!-- schema即为数据库名 tableName为对应的数据库表 domainObjectName是要生成的实体类 enable*ByExample 
				是否生成 example类 -->
	</context>
</generatorConfiguration>